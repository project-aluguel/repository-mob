<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/fundo_roxo"
        android:scaleType="fitXY"
        android:contentDescription="Background image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88111111"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_left"
                android:contentDescription="Background image"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@string/txt_back'
                android:textColor="@color/white"
                android:onClick="goToHome"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@mipmap/foto_creusa"
                android:background="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_name_creusa"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:id="@+id/nameUser_profile"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#DED5EC"
            android:id="@+id/layout_user"
            >
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:onClick="goToEditarPerfil"
                >
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#25032A"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/user"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_weight="6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar meu Perfil"
                        android:gravity="center"
                        style="@style/BaseTextUserPage"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_right_purple"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#25032A"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/bag"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_weight="6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meus Produtos"
                        android:gravity="center"
                        style="@style/BaseTextUserPage"
                        android:onClick="goToMyProducts"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_right_purple"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#25032A"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/clock"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_weight="6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HistÃ³rico"
                        android:gravity="center"
                        style="@style/BaseTextUserPage"
                        android:onClick="goToMyRequests"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_right_purple"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#25032A"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/cursor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_weight="6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cadastrar Produtos"
                        android:gravity="center"
                        android:onClick="goToCadastrarItem"
                        style="@style/BaseTextUserPage"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_right_purple"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#25032A"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/folder"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_weight="6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gerenciar carteira"
                        android:gravity="center"
                        android:onClick="goToCarteira"
                        style="@style/BaseTextUserPage"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#DED5EC"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_right_purple"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>