<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetricsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/fundo_roxo"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88111111"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/arrow_left"
                        android:contentDescription="Background image"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@string/txt_back'
                        android:onClick="goToHome"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"

                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="300dp"

                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/produto_spiderman"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="5dp"
                                >

                            </LinearLayout>




                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Spider Man 4 Sony PS4 Físico"
                                android:textColor="@color/white"
                                android:textSize="30dp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avaliação do anunciante"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="17sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="125dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"

                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/star"
                                android:layout_weight="1"/><ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/star"
                            android:layout_weight="1"/><ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/star"
                            android:layout_weight="1"/><ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/star"
                            android:layout_weight="1"/><ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/star"
                            android:layout_weight="1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center">
                            <Button
                                android:layout_width="180dp"
                                android:layout_height="80dp"
                                style="@style/BaseButton"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:text="Alugar"></Button>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="390dp"
                        android:layout_height="300dp"
                        android:gravity="center|top">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="300dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Média de dias:  05 dias"
                                style="@style/TitleMetrics"
                                /><TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantidade média de dias o produto foi alugado  dividido pela quantidade de alugueis diferentes do mesmo."
                                android:maxLines="7"
                                android:scrollbars="vertical"
                            style="@style/TextMetrics"

                            /><TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vizualizações do anúncio: 22"
                                android:maxLines="7"
                                android:scrollbars="vertical"
                            style="@style/TitleMetrics"

                            /><TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantidade de vezes que o anúncio foi vizualizado por outros usuários."
                                android:maxLines="7"
                                android:scrollbars="vertical"
                            style="@style/TextMetrics"
                                /><TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantidade de alugueis: 7"
                                android:maxLines="7"
                                android:scrollbars="vertical"
                            style="@style/TitleMetrics"

                            /><TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantidade de vezes que o produto foi alugado por usuários."
                                android:maxLines="7"
                                android:scrollbars="vertical"
                            style="@style/TextMetrics"
                                /><TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aproveitamento do anúncio: 12%"
                                android:maxLines="7"
                                android:scrollbars="vertical"
                            style="@style/TitleMetrics"

                            /><TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aproveitamento de alugueis em relação a vizualizações do seu produto."
                                android:maxLines="7"
                                android:scrollbars="vertical"
                            style="@style/TextMetrics"
                                />


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        android:gravity="center">



                    </LinearLayout>

                </LinearLayout>






            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>