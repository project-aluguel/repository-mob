<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Renthouse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="BaseButton">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
    </style>

    <style name="BaseText">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textColor">@color/white_trans_txt</item>
    </style>

    <style name="BaseTextTitleNegociation">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleMetrics">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textColor">#0A0612</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextMetrics">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textColor">#292530</item>
        <item name="android:layout_marginTop">5dp</item>

    </style>

    <style name="BaseTextPriceNegociation">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textColor">#1AFF00</item>
    </style>

    <style name="BaseEditText">
        <item name="android:backgroundTint">@color/white_trans_txt</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">@color/white_trans_txt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/merriweather_sans_light</item>
    </style>
    <style name="BaseTextModal" parent="BaseText">
        <item name="android:fontFamily">@font/merriweather_sans_light</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="BaseTextUserPage">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textColor">#25032A</item>
    </style>

    <style name="TextTitle" parent="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
    </style>

    <style name="TextError" parent="BaseText">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/merriweather_sans_bold</item>
    </style>
</resources>